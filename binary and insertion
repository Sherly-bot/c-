#include <iostream>
using namespace std;
void bubblesort(int n,int arr[])
{
    bool swapped = false;
    for(int i=1;i<n;i++)
    {
        for(int j=0;j<n-i;j++)
        {
            if(arr[j]>arr[j+1])
            {
                swap(arr[j],arr[j+1]);
                swapped = true;
            }
        }
        if(swapped==false)
        break;
    }}

int main(){
    int arr[]={8,4,2,73,44};
    int n = sizeof(arr) / sizeof(arr[0]);
    bubblesort(n,arr);
    cout << "Sorted array: ";
    for (int i = 0; i < n; i++)
    {
        cout << arr[i] << " ";
      

    }}
