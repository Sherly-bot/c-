#include <iostream>
using namespace std;
void bubblesort(int n,int arr[])
{
    bool swapped = false;
    for(int i=1;i<n;i++)
    {
        for(int j=0;j<n-i;j++)
        {
            if(arr[j]>arr[j+1])
            {
                swap(arr[j],arr[j+1]);
                swapped = true;
            }
        }
        if(swapped==false)
        break;
    }}

int main(){
    int arr[]={8,4,2,73,44};
    int n = sizeof(arr) / sizeof(arr[0]);
    bubblesort(n,arr);
    cout << "Sorted array: ";
    for (int i = 0; i < n; i++)
    {
        cout << arr[i] << " ";
      

    }}




insertion sorting


#include <iostream>
using namespace std;
void bubblesort(int n,int arr[])
   {
    for(int i=1;i<n;i++)
    {
    int j=i-1;
    int temp = arr[i];
        for(;j>=0;j--)
        {
            if(arr[j]>temp)
            {
               arr[j+1]=arr[j];
            }
            else
            {
                break;
            }
            
        }
        arr[j+1]=temp;
    }}
    
    int main() {
    int arr[] = {8, 49, 29, 73, 81};
    int n = sizeof(arr) / sizeof(arr[0]);

    bubblesort(n, arr);

    cout << "Sorted array: ";
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }
    
}



char in arrays


#include <iostream>
using namespace std;
int ispallindrome(char name[],int n)
{
    int s=0;
    int e=n-1;
    while(s<=e)
    {
        if(name[s]==name[e])
        {
            return 1;
        }
        else
        {
            return 0;
        }
    }
}
void reverse(char name[],int n)
{
    int s=0;
    int e = n-1;

    while(s<e) {
        swap(name[s], name[e]);
        s++;
        e--;
    }
    
}
int bubblesort(char name[])
{
    int i=0;
    int count=0;
    for(int i=0;name[i]!='\0';i++)
    {
        count++;
    }
    return count;
}
int main(){
    char name[20];
    cout<<"enter you name"<<endl;
    cin>>name;
    
    int len=bubblesort(name);
    cout<<"length is:"<<len<<endl;
    
    reverse(name,len);
    cout<<"reverse is:"<< name<<endl;
    
     cout<<"pallindrome or not is:"<<  ispallindrome(name,len)<<endl;
    
}
